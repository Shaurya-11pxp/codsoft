import tkinter as tk
from tkinter import messagebox

# Function to add a task to the list
def add_task():
    task = entry.get()  # Get the task from the input field
    if task != "":
        listbox.insert(tk.END, task)  # Add task to the listbox
        entry.delete(0, tk.END)  # Clear the entry field
    else:
        messagebox.showwarning("Input Error", "Please enter a task.")

# Function to remove selected task
def remove_task():
    try:
        selected_task_index = listbox.curselection()[0]  # Get the index of selected task
        listbox.delete(selected_task_index)  # Remove the selected task
    except IndexError:
        messagebox.showwarning("Selection Error", "Please select a task to remove.")

# Function to mark the selected task as completed
def complete_task():
    try:
        selected_task_index = listbox.curselection()[0]  # Get the index of selected task
        task = listbox.get(selected_task_index)  # Get the task text
        # Mark it as completed by adding a "✓" at the beginning of the task
        listbox.delete(selected_task_index)
        listbox.insert(selected_task_index, "✓ " + task)
    except IndexError:
        messagebox.showwarning("Selection Error", "Please select a task to mark as completed.")

# Create the main window
root = tk.Tk()
root.title("To-Do List")
root.geometry("400x400")

# Create a label
label = tk.Label(root, text="To-Do List", font=("Arial", 20))
label.pack(pady=10)

# Create a listbox to display tasks
listbox = tk.Listbox(root, width=50, height=10, selectmode=tk.SINGLE, font=("Arial", 14))
listbox.pack(pady=10)

# Create an entry field for adding tasks
entry = tk.Entry(root, font=("Arial", 14), width=40)
entry.pack(pady=5)

# Create buttons for adding, removing, and completing tasks
add_button = tk.Button(root, text="Add Task", width=20, height=2, font=("Arial", 14), command=add_task)
add_button.pack(pady=5)

remove_button = tk.Button(root, text="Remove Task", width=20, height=2, font=("Arial", 14), command=remove_task)
remove_button.pack(pady=5)

complete_button = tk.Button(root, text="Complete Task", width=20, height=2, font=("Arial", 14), command=complete_task)
complete_button.pack(pady=5)

# Start the main event loop
root.mainloop()
